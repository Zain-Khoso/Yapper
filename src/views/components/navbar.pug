include ../svgs/icon

mixin navbar(actions=true) 
  nav.navbar.container 
    a.logo(href="/") 
      +icon('icon')

      h2 Yapper

    ul.links-list 
      li.link-item 
        a.link.font-alex(href="/#features") Features 
      li.link-item 
        a.link.font-alex(href="/#testimonials") Testimonials 
      li.link-item 
        a.link.font-alex(href="/#pricing") Pricing 
      li.link-item 
        a.link.font-alex(href="/#creator") Creator 

    .btn-group.reverse
      if actions
        a.btn.primary.noauth-action(href="/login") Login
        a.btn.outline.noauth-action(href="/create-account") Create Account
        
        a.btn.primary.hidden.auth-action(href="/chat") Start Yapping
  
  .separator.horizontal 