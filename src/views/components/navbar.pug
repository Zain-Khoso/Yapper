include ../svgs/icon

mixin navbar(noActions=false) 
  nav.navbar 
    a.logo(href="/") 
      +icon('icon')
      h1 Yapper

    if !noActions
      if !isAuthenticated
        .btn-group.reverse
          a.btn.primary(href="/login") Login
          a.btn.outline(href="/create-account") Create Account
      else 
        a.btn.primary(href="/chat") Start Yapping
  
  .separator.horizontal 